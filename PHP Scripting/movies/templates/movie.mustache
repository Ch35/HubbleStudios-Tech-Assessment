{{# movie }}
<div class="m-4 bg-light p-4 rounded">
    <h1 class="text-center">{{Title}} ({{Year}})</h1>

    <div class="row">
        <div class="col-md-4 col-sm-12">
            {{# Poster }}<img src="{{Poster}}" alt="{{Title}} Poster Image" class="img-fluid float-right rounded">{{/ Poster }}
        </div>
        <div class="col-md-8 col-sm-12">
            <ul class="d-inline list-inline">
                <li>
                    <h5><b>Release:</b> {{Released}}</h5>
                </li>
                <li>
                    <h5><b>Runtime:</b> {{Runtime}}</h5>
                </li>
                <li>
                    <h5><b>Actors:</b> {{Actors}}</h5>
                </li>
            </ul>

            <h4 class="mt-4">
                {{Plot}}
            </h4>
        </div>
    </div>
</div>
{{/ movie }}